function compare(property){
  return function(a,b){
    var value1 = a[property];
    var value2 = b[property];
    return value1-value2;
  }
}

arr.sort(compare('age'))



function sortCompare(property,booleanï¼‰{
  var recv;
  if(boolean == 'undefined'){
    recv = 1;
  }else{
    recv = (recv)?1:-1;
  }
  return function(a,b){
    a=a[property];
    b=b[property];
    if(a<b){
      return recv*-1
    }else if(a>b){
      return recv * 1;
    }else{
      return 0;
    }
  }

}
